{
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/trigger-agent?agentType=settlement",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/trigger-agent?agentType=ptp",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/trigger-agent?agentType=performance",
      "schedule": "0 1 1 * *"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/middleware"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Forwarded-Host",
          "value": "mahikeng.smartkollect.co.za"
        }
      ]
    }
  ]
}