# SendGrid API Key for email service
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Default sender email (used when user email is not available)
DEFAULT_FROM_EMAIL=noreply@zimako.co.za

# EmailJS Configuration
NEXT_PUBLIC_EMAILJS_SERVICE_ID=your_emailjs_service_id
NEXT_PUBLIC_EMAILJS_TEMPLATE_ID=your_emailjs_template_id
NEXT_PUBLIC_EMAILJS_PUBLIC_KEY=your_emailjs_public_key

# Infobip SMS API Configuration
INFOBIP_BASE_URL=http://wpmnqd.api.infobip.com
INFOBIP_API_KEY=your_infobip_api_key_here
INFOBIP_SENDER=SmartKollect

# SMS Configuration
NEXT_PUBLIC_ENABLE_SMS_NOTIFICATIONS=true
